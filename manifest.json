{
    "name": "Arrow",
    "version": "1.0",
    "description": "A chrome popup extension to help blind users navigate the web efficiently.",
    "manifest_version": 3,
    "permissions": ["activeTab", "storage", "scripting", "tabs", "windows"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>", "http://*/*", "https://*/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "Open Web Navigator",
      "default_icon": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    }
  }
  